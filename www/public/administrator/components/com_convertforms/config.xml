<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset name="Misc" label="General" addfieldpath="/plugins/system/nrframework/fields">
        <field name="loadCSS" default="1" class="btn-group btn-group-yesno" type="radio" label="COM_CONVERTFORMS_LOADCSS" description="COM_CONVERTFORMS_LOADCSS_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="loadjQuery" default="1" class="btn-group btn-group-yesno" type="radio" label="NR_LOAD_JQUERY" description="NR_LOAD_JQUERY_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="mediaversioning" default="1" class="btn-group btn-group-yesno" type="radio" label="NR_MEDIA_VERSIONING" description="NR_MEDIA_VERSIONING_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="showcopyright" default="1" class="btn-group btn-group-yesno" type="radio" label="NR_SHOW_COPYRIGHT" description="NR_SHOW_COPYRIGHT_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="excel_security" type="radio"
            label="COM_CONVERTFORMS_EXCEL_SECURITY"
            description="COM_CONVERTFORMS_EXCEL_SECURITY_DESC"
            default="1"
            class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="debug" default="0" class="btn-group btn-group-yesno" type="radio" label="COM_CONVERTFORMS_DEBUG" description="COM_CONVERTFORMS_DEBUG_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>
    <fieldset name="advanced" label="Advanced" addfieldpath="/administrator/components/com_convertforms/models/forms/fields">
        
        <field name="APIStart" type="nr_block" 
            start="1"
            description="COM_CONVERTFORMS_API_DESC"
            label="COM_CONVERTFORMS_API_ENABLE"
        />
        <field name="api" type="radio"
            default="0" 
            class="btn-group btn-group-yesno" 
            label="COM_CONVERTFORMS_API_ENABLE"
            description="COM_CONVERTFORMS_API_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="api_key" type="NR_Password"
            class="btn-group btn-group-yesno"
            label="COM_CONVERTFORMS_API_KEY"
            description="COM_CONVERTFORMS_API_KEY_DESC"
            filter="alnum"
            showon="api:1"
        />
        <field name="APIEnd" type="nr_block" 
            end="1"
        />
        
        <field name="recaptchaStart" type="nr_block" 
            start="1"
            description="NR_RECAPTCHA_DESC"
            label="NR_RECAPTCHA"
        />
        <field name="recaptcha_sitekey" type="text" 
            label="NR_RECAPTCHA_SITE_KEY"
            description="NR_RECAPTCHA_SITE_KEY_DESC"
            class="input-xlarge"
        />
        <field name="recaptcha_secretkey" type="text" 
            label="NR_RECAPTCHA_SECRET_KEY"
            description="NR_RECAPTCHA_SECRET_KEY_DESC"
            class="input-xlarge"
        />        
        <field name="recaptchaEnd" type="nr_block" 
            end="1"
        />
        
        <field name="executeoutputoverride" default="0" class="btn-group btn-group-yesno" type="radio" label="NR_EXECUTE_ON_OUTPUT_OVERRIDE" description="NR_EXECUTE_ON_OUTPUT_OVERRIDE_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="executeonformat" default="0" class="btn-group btn-group-yesno" type="radio" label="NR_EXECUTE_ON_FORMAT_OVERRIDE" description="NR_EXECUTE_ON_FORMAT_OVERRIDE_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

    </fieldset>
	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC" >
		<field name="rules" type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			validate="rules"
			component="com_convertforms"
			section="component" />
	</fieldset>
</config>